{
  "name": "my-website",
  "description": "",
  "author": "Vasya Dudin",
  "license": "ISC",
  "scripts": {
    "watch": "npm-run-all --parallel _watch:*",
    "build": "cross-env-shell ELEVENTY_ENV=production \"npm-run-all _build:sass _build:lightningcss _build:js && eleventy && pnpm _build:html\"",
    "deploy": "vercel deploy ./dist --prod",
    "build+deploy": "pnpm run build && pnpm run deploy",
    "_watch:11ty": "eleventy --serve",
    "_watch:sass": "sass --watch --style=expanded src/styles/bundle.sass:dist/styles/bundle.css src/styles/fancybox.sass:dist/styles/fancybox.css",
    "_watch:js": "rollup -c -w",
    "_build:sass": "sass --no-source-map src/styles/bundle.sass:dist/styles/bundle.css src/styles/fancybox.sass:dist/styles/fancybox.css",
    "_build:lightningcss": "npx lightningcss-cli --minify --bundle dist/styles/bundle.css -d dist/styles && npx lightningcss-cli --minify --bundle dist/styles/fancybox.css -d dist/styles",
    "_build:js": "rollup -c",
    "_build:html": "npx html-minifier-terser --input-dir dist --output-dir dist --file-ext html --collapse-whitespace --remove-comments --minify-css --minify-js",
    "_remove-dist": "rimraf dist"
  },
  "dependencies": {
    "@11ty/eleventy": "3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.5",
    "@fancyapps/ui": "^6.1.7",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@uncenter/eleventy-plugin-toc": "^1.0.3",
    "cross-env": "^10.1.0",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "html-minifier-terser": "^7.2.0",
    "js-yaml": "^4.1.1",
    "lightningcss-cli": "^1.30.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.4",
    "path": "^0.12.7",
    "rimraf": "^6.1.2",
    "rollup": "^4.54.0",
    "sass": "^1.97.1",
    "vercel": "^50.1.3"
  }
}

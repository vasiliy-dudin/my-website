<header class="header">
	<a class="skip-link" href="#main-content">Skip to main content</a>
	<div class="container">
		<nav class="nav">
			<a class="logo" href="/" aria-label="{{ site.title }}">
				{% include "../assets/logo.svg" %}
				<div class="logo__text">
					<span class="logo__name">{{ site.title }}</span>
					<span class="logo__title">{{ site.description }}</span>
				</div>
			</a>
			<ul class="menu" id="menu">
				{% for item in menu %}
					{% if item.href == page.url %}
						{% set isCurrent = true %}
						{% else %}
							{% set isCurrent = false %}
					{% endif %}
					{% if item.href == page.url or (page.url and item.href != '/' and page.url.startsWith(item.href)) %}
						{% set isActive = true %}
						{% else %}
							{% set isActive = false %}
					{% endif %}

					{% if item.enabled %}
						<li class="menu__item">
							<a class="menu__link{% if isActive %} --active{% endif %}{% if item.external %} --external{% endif %}"
								href="{{ item.href }}"
								{% if isCurrent %}aria-current="page"{% endif %}
								{% if item.external %}target="_blank" rel="noopener"{% endif %}
							>
								{% if item.icon %}
									<span class="menu__link-icon">{% include "../assets/" + item.icon + ".svg" %}</span>
								{% endif %}
								{{ item.name }}
							</a>
						</li>
					{% endif %}

				{% endfor %}
			</ul>
		</nav>
	</div>


</header>